.row
  .col-md-8
    %h1 Login

.row
  .col-md-offset-3.col-md-6
    .panel.panel-default
      .panel-body
        = form_tag(sessions_path, class: "form-horizontal") do
          .form-group
            = label_tag(:email,"Email", class: "col-md-2 control-label")
            .col-md-10
              = text_field_tag(:email, params[:email], class: "form-control")
          .form-group
            = label_tag(:password, "Password", class: "col-md-2 control-label")
            .col-md-10
              = password_field_tag(:password, "", class: "form-control")
          .form-group
            .col-md-offset-2.col-md-10
              = submit_tag("Login", class: "btn btn-default")
